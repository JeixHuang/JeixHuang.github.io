{{- $pages := where site.RegularPages "Section" "posts" | sort "Date" "desc" -}}
[
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "date": {{ $p.Date.Format "2006-01-02" | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "excerpt": {{ ($p.Summary | plainify | htmlUnescape | replaceRE "\\s+" " " | trim " " | truncate 160) | jsonify }}
  }
{{- end -}}
]


